<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D3234">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="download notes"
        android:id="@+id/downloader"
        android:background="@drawable/cardlayout"
        android:textColor="#ffffff"
        android:width="180dp"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/textView29"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="BRANCH"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="62dp"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SEM"
        android:id="@+id/textView27"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginTop="37dp"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SUBJECT"
        android:id="@+id/textView28"
        android:layout_below="@+id/textView27"
        android:layout_alignStart="@+id/textView27"
        android:layout_marginTop="31dp"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="The requested notes is ready to download !"
        android:id="@+id/textView29"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#d4d4d4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/branch_indicator"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignEnd="@+id/textView29"
        android:layout_marginEnd="41dp"
        android:textColor="#d4d4d4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/sem_indicator"
        android:layout_above="@+id/textView28"
        android:layout_alignStart="@+id/branch_indicator"
        android:textColor="#d4d4d4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/sub_indicator"
        android:layout_alignBottom="@+id/textView28"
        android:layout_alignStart="@+id/sem_indicator"
        android:textColor="#d4d4d4" />
</RelativeLayout>