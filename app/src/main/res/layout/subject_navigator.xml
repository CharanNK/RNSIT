<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Enter the Subject :"
        android:id="@+id/textView26"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="45dp"
        android:textColor="#000000"
        android:layout_toStartOf="@+id/sem_submit_button" />

    <Spinner
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:id="@+id/sem_spinner"
        android:layout_alignTop="@+id/textView26"
        android:layout_toEndOf="@+id/textView26" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:background="@drawable/cardlayout"
        android:textColor="#ffffff"
        android:id="@+id/sem_submit_button"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/textView26"
        android:layout_centerHorizontal="true" />
</RelativeLayout>